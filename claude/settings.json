{
  "model": "opus",
  "permissions": {
    "allow": ["Bash(npm:*)", "Bash(yarn:*)", "Bash(git:*)", "Bash(npm run lint)", "Bash(npm run test)", "Read(./.env)", "Read(./src/*)", "Write(./src/*)", "Edit(./docs/*)"],
    "deny": ["Bash(sudo:*)", "Read(./secrets/*)", "Write(./.env)"]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Codeが許可を求めています\" with title \"Claude Code\" subtitle \"確認待ち\" sound name \"Glass\"'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"タスクが完了しました\" with title \"Claude Code\" subtitle \"処理終了\" sound name \"Hero\"'"
          }
        ]
      }
    ]
  }
}